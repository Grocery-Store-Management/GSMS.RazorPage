@page
@model GsmsRazor.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employee";
}

<h1 class="text-info mb-5">Employee</h1>
<form asp-page="/Employees/Index" method="get" class="m-2">
    <div class="input-group" style="width:400px">
        <input type="text" class="form-control" placeholder="Enter Name to search ..." name="searchString" value="@ViewBag.searchString" >
        <div class="input-group-append">
            <button class="btn btn-secondary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</form>
<form class="mb-3">
    <button class="btn btn-outline-success" asp-page="Create"><i class="fa-solid fa-circle-plus"></i></button>
</form>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr class="text-white">
            <th>Name</th>
            <th>Password</th>
            <th>Store</th>
            <th>Role</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employee)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Password</td>
            <td>@item.Store.Name</td>
            <td>@item.Role</td>
            @{
                if (item.IsDeleted)
                {
                    <td><span class="badge badge-danger" style="font-size:15px">Inactive</span></td>
                }
                else
                {
                    <td><span class="badge badge-success" style="font-size:15px">Active</span></td>
                }
            }
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary mx-1"><i class="fas fa-edit"></i></a> 
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info mx-1"><i class="fa-solid fa-info"></i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
@{
    <ul class="pagination">
        @for (var i = 1; i <= ViewBag.pageCount; i++)
        {
            <li class="page-item @(i == ViewBag.currentPage ? "active" : "")">
                <a asp-page="/Employees/Index"
                   asp-route-pageIndex="@i"
                   asp-route-searchString="@ViewBag.searchString" class="page-link">@i</a>
            </li>
        }
    </ul>
}