@page
@model GsmsRazor.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details of <span>@Html.DisplayFor(model => model.Employee.Name)</span></h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Password)
        </dd>
        <dt class="col-sm-2">
            Store
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Store.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.IsDeleted)
        </dt>
        @{
            if (Model.Employee.IsDeleted)
            {
                <dd class="col-sm-10">
                    Inactive
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    Active
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
