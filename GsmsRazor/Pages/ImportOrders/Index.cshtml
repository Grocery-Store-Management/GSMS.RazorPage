@page
@model GsmsRazor.Pages.ImportOrders.IndexModel

@{
    ViewData["Title"] = "Import Orders";
}

<h1>Import Orders</h1>

<p>
    <a class="btn btn-outline-primary mb-3" asp-page="Create">Create New Import Order</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr class="text-white">
            <th>
                @Html.DisplayNameFor(model => model.ImportOrder[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportOrder[0].Store)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportOrder[0].CreatedDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ImportOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["CreateImportOrderSuccessfully"] != null &&
 (bool)TempData["CreateImportOrderSuccessfully"] == true)
{
    <script>
        toastr.options.showEasing = 'swing';
        toastr.success('Import order created!', "Success");
    </script>
}