@page
@model GsmsRazor.Pages.ImportOrders.DetailsModel

@{
    ViewData["Title"] = "Import Order Details";
}

<h1>Details</h1>

<div>
    <h4>Import Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImportOrder.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ImportOrder.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImportOrder.CreatedDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ImportOrder.CreatedDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImportOrder.Store)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ImportOrder.Store.Name)
        </dd>
    </dl>
</div>
<div>
    <h4>Import Order Details</h4>
    <hr />
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr class="text-white">
                <th>No</th>
                <th>
                    @Html.DisplayNameFor(model => model.ImportOrder.ImportOrderDetails.ToList()[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImportOrder.ImportOrderDetails.ToList()[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImportOrder.ImportOrderDetails.ToList()[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImportOrder.ImportOrderDetails.ToList()[0].Distributor)
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int iodCount = 0; }
            @foreach (var item in Model.ImportOrder.ImportOrderDetails) {
                iodCount++;
            <tr>
                <td>
                    @iodCount
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distributor)
                </td>
            </tr>
            }
        </tbody>
    </table>
    <ul>
        <li class="mb-2">
            Total items: 
            <span class="badge badge-success p-2">@Model.ImportOrder.ImportOrderDetails.Count</span>
        </li>
        <li class="mb-2">
            Order Total:
            <span class="badge badge-primary p-2">@Model.ImportOrder.ImportOrderDetails.Sum(iod => iod.Price * iod.Quantity).ToString("0.0")</span>
        </li>
    </ul>
</div>
<div>
    <a class="btn btn-outline-success" asp-page="./Index">Back to List</a>
</div>
