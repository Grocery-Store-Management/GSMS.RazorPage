@model GsmsRazor.Pages.ImportOrders.CreateModel

<div class="modal fade" id="createStoreModal"
     tabindex="-1" aria-labelledby="createStoreModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createStoreModalLabel">
                    Create new Store
                </h5>
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    @*<partial name="~/Pages/Products/_Create.cshtml" />*@
                    <div class="row">
                        <div class="col-md-12">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ImportOrder.Store.Name" class="control-label"></label>
                                <input asp-for="ImportOrder.Store.Name" class="form-control" />
                                <span asp-validation-for="ImportOrder.Store.Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <input type="button" value="Create Store"
                               class="btn btn-outline-info" id="btnCreateStore" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/import-orders/createstoremodal.js"></script>