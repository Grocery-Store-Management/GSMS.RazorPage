@page
@model GsmsRazor.Pages.Products.CreateProductModel
@{
}
@{
    ViewData["Title"] = "Create new Product";
}

<h1>Create new Product</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.StoredQuantity" class="control-label"></label>
                <input asp-for="Product.StoredQuantity" class="form-control" />
                <span asp-validation-for="Product.StoredQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ExpiringDate" class="control-label"></label>
                <input asp-for="Product.ExpiringDate" class="form-control" />
                <span asp-validation-for="Product.ExpiringDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}